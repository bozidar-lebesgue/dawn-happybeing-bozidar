{% comment %}
  Renders product buy-buttons.
  Accepts:
  - color: String color code.
  - fill_color: String color code.
  - size: Icon size.
  Usage:
  {% render 'icon-checkmark-circle-full', color: 'black', size: 24 %}
{% endcomment %}

{% liquid
  if color == blank
    assign icon_color = 'black'
  else 
    assign icon_color = color
  endif

  if fill_color == blank
    assign icon_fill_color = 'white'
  else 
    assign icon_fill_color = fill_color
  endif

  if size == blank
    assign icon_size = 24
  else 
    assign icon_size = size
  endif
%}
<svg class="icon icon-checkmark-circle-full" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 25 24" fill="{{ icon_fill_color }}" xmlns="http://www.w3.org/2000/svg">
  <circle cx="12.3447" cy="12" r="12" fill="{{ icon_color }}"/>
