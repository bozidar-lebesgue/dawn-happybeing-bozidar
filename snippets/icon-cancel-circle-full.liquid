{% comment %}
  Renders product buy-buttons.
  Accepts:
  - color: String color code.
  - fill_color: String color code.
  - size: Icon size.
  Usage:
  {% render 'icon-cancel-circle-full', color: 'black', size: 24 %}
{% endcomment %}

{% liquid
  if color == blank
    assign icon_color = 'black'
  else 
    assign icon_color = color
  endif


  if color == blank
    assign icon_fill_color = 'none'
  else 
    assign icon_fill_color = fill_color
  endif

  if size == blank
    assign icon_size = 24
  else 
    assign icon_size = size
  endif
%}
