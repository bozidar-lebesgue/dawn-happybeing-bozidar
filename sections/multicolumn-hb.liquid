      "id": "subtitle_mobile_font_size",
      "min": 0,
      "unit": "rem",
      "max": 10,
      "step": 0.1,
      "default": 0,
      "label": "Subtitle mobile font size"
    },
    {
      "type": "range",
      "id": "subtitle_margin_bottom",
      "min": 0,
      "unit": "px",
      "max": 100,
      "step": 1,
      "default": 10,
      "label": "Subtitle margin bottom"
    },
    {
      "type": "range",
